<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.RadioMenuItem?>
<?import javafx.scene.control.SeparatorMenuItem?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<VBox prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1">
  <children>
    <MenuBar VBox.vgrow="NEVER">
      <menus>
        <Menu mnemonicParsing="false" text="File">
          <items>
            <MenuItem mnemonicParsing="false" text="New" />
            <MenuItem mnemonicParsing="false" text="Open…" />
            <Menu mnemonicParsing="false" text="Open Recent" />
            <SeparatorMenuItem mnemonicParsing="false" />
            <MenuItem mnemonicParsing="false" text="Close" />
            <MenuItem mnemonicParsing="false" text="Save" />
            <MenuItem mnemonicParsing="false" text="Save As…" />
            <MenuItem mnemonicParsing="false" text="Revert" />
            <SeparatorMenuItem mnemonicParsing="false" />
            <MenuItem mnemonicParsing="false" text="Preferences…" />
            <SeparatorMenuItem mnemonicParsing="false" />
            <MenuItem mnemonicParsing="false" text="Quit" />
          </items>
        </Menu>
            <Menu mnemonicParsing="false" text="Edit">
               <items>
                  <Menu mnemonicParsing="false" text="Language">
                     <items>
                        <RadioMenuItem mnemonicParsing="false" selected="true" text="English">
                           <toggleGroup>
                              <ToggleGroup fx:id="language" />
                           </toggleGroup>
                        </RadioMenuItem>
                        <RadioMenuItem mnemonicParsing="false" text="Русский" toggleGroup="$language" />
                     </items>
                  </Menu>
                  <MenuItem fx:id="darkThemeMenuItem" mnemonicParsing="false" onAction="#onDarkThemeMenuItemSelected" text="Dark Theme" />
               </items>
            </Menu>
        <Menu mnemonicParsing="false" text="Help">
          <items>
            <MenuItem fx:id="aboutMenuItem" mnemonicParsing="false" onAction="#onAboutMenuItemSelected" text="About" />
          </items>
        </Menu>
      </menus>
    </MenuBar>
      <HBox prefHeight="162.0" prefWidth="640.0" VBox.vgrow="ALWAYS">
         <children>
            <Region HBox.hgrow="ALWAYS" />
            <VBox alignment="CENTER">
               <children>
                  <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Визуализация сведений задач поиска" textAlignment="CENTER" wrappingWidth="280.53668332099915" VBox.vgrow="NEVER">
                     <VBox.margin>
                        <Insets bottom="8.0" left="8.0" right="8.0" top="8.0" />
                     </VBox.margin>
                     <font>
                        <Font name="System Bold" size="20.0" />
                     </font>
                  </Text>
                  <TextArea editable="false" minHeight="100.0" nodeOrientation="LEFT_TO_RIGHT" prefHeight="300.0" prefWidth="334.0" text="Эта программа производит сведения между задачами поиска. На данный момент реализваны три сведения:&#10;&#10;Ниже можно выбрать сведение, которое хотите произвести и режим, в котором будет производиться сведение." wrapText="true">
                     <font>
                        <Font size="15.0" />
                     </font>
                     <VBox.margin>
                        <Insets bottom="8.0" left="8.0" right="8.0" top="8.0" />
                     </VBox.margin>
                  </TextArea>
                  <Region prefHeight="200.0" prefWidth="200.0" />
                  <ComboBox fx:id="reductionCombo" onAction="#onReductionComboChanged" prefWidth="150.0" promptText="Select reduction ...">
                     <VBox.margin>
                        <Insets bottom="8.0" left="8.0" right="8.0" top="8.0" />
                     </VBox.margin>
                  </ComboBox>
                  <ComboBox fx:id="modeCombo" onAction="#onModeComboChanged" prefWidth="150.0" promptText="Select mode ...">
                     <VBox.margin>
                        <Insets bottom="8.0" left="8.0" right="8.0" top="8.0" />
                     </VBox.margin>
                  </ComboBox>
                  <Region prefHeight="200.0" prefWidth="200.0" />
                  <Button fx:id="startButton" disable="true" mnemonicParsing="false" onAction="#runReduction" prefWidth="150.0" style="-fx-border-color: #4CAF50; -fx-border-radius: 5; -fx-background-radius: 5;" text="Запустить сведение">
                     <VBox.margin>
                        <Insets bottom="8.0" left="8.0" right="8.0" top="8.0" />
                     </VBox.margin>
                  </Button>
               </children>
            </VBox>
            <Region HBox.hgrow="ALWAYS" />
         </children>
      </HBox>
  </children>
</VBox>
