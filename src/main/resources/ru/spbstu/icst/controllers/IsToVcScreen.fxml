<VBox alignment="CENTER" prefHeight="800.0" prefWidth="1280.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1">
  <children>
    <MenuBar VBox.vgrow="NEVER">
      <menus>
        <Menu mnemonicParsing="false" text="File">
          <items>
            <MenuItem mnemonicParsing="false" text="New" />
            <MenuItem mnemonicParsing="false" text="Open…" />
            <Menu mnemonicParsing="false" text="Open Recent" />
            <SeparatorMenuItem mnemonicParsing="false" />
            <MenuItem mnemonicParsing="false" text="Close" />
            <MenuItem mnemonicParsing="false" text="Save" />
            <MenuItem mnemonicParsing="false" text="Save As…" />
            <MenuItem mnemonicParsing="false" text="Revert" />
            <SeparatorMenuItem mnemonicParsing="false" />
            <MenuItem mnemonicParsing="false" text="Preferences…" />
            <SeparatorMenuItem mnemonicParsing="false" />
            <MenuItem mnemonicParsing="false" text="Quit" />
          </items>
        </Menu>
        <Menu mnemonicParsing="false" text="Edit">
          <items>
            <MenuItem mnemonicParsing="false" text="Undo" />
            <MenuItem mnemonicParsing="false" text="Redo" />
            <SeparatorMenuItem mnemonicParsing="false" />
            <MenuItem mnemonicParsing="false" text="Cut" />
            <MenuItem mnemonicParsing="false" text="Copy" />
            <MenuItem mnemonicParsing="false" text="Paste" />
            <MenuItem mnemonicParsing="false" text="Delete" />
            <SeparatorMenuItem mnemonicParsing="false" />
            <MenuItem mnemonicParsing="false" text="Select All" />
            <MenuItem mnemonicParsing="false" text="Unselect All" />
          </items>
        </Menu>
        <Menu mnemonicParsing="false" text="Help">
          <items>
            <MenuItem mnemonicParsing="false" text="About MyHelloApp" />
          </items>
        </Menu>
      </menus>
    </MenuBar>
      <VBox nodeOrientation="LEFT_TO_RIGHT" prefHeight="200.0" prefWidth="100.0" VBox.vgrow="ALWAYS">
         <VBox.margin>
            <Insets bottom="8.0" left="8.0" right="8.0" top="8.0" />
         </VBox.margin>
         <children>
            <Label fx:id="stepInformation" prefHeight="24.0" prefWidth="1258.0" text="This is a IS -&gt; VC problem reduction. Input your formula and then press step button until problem will finally be reduced." textFill="#37962a">
               <opaqueInsets>
                  <Insets bottom="8.0" left="8.0" right="8.0" top="8.0" />
               </opaqueInsets>
               <font>
                  <Font size="21.0" />
               </font>
            </Label>
            <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Forward" wrappingWidth="882.1366806030273">
               <font>
                  <Font name="System Bold" size="20.0" />
               </font>
            </Text>
            <HBox prefHeight="100.0" prefWidth="200.0">
               <children>
                  <BorderPane fx:id="graphInputPane" minHeight="-Infinity" minWidth="-Infinity" prefHeight="259.0" prefWidth="851.0" style="-fx-border-color: #A9A9A9; -fx-border-radius: 5;">
                     <padding>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                     </padding>
                     <HBox.margin>
                        <Insets bottom="8.0" left="8.0" right="8.0" top="8.0" />
                     </HBox.margin>
                  </BorderPane>
                  <VBox prefHeight="275.0" prefWidth="409.0" HBox.hgrow="ALWAYS">
                     <children>
                        <Label prefHeight="18.0" prefWidth="412.0" text="Input size of desired independent set:">
                           <VBox.margin>
                              <Insets bottom="8.0" left="8.0" right="8.0" top="8.0" />
                           </VBox.margin>
                        </Label>
                        <TextField fx:id="independentSetSizeInput" prefHeight="26.0" prefWidth="0.0" promptText="Size of Independent Set ...">
                           <VBox.margin>
                              <Insets bottom="8.0" left="8.0" right="8.0" top="8.0" />
                           </VBox.margin>
                        </TextField>
                     </children>
                     <HBox.margin>
                        <Insets top="8.0" />
                     </HBox.margin>
                  </VBox>
               </children>
            </HBox>
            <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Backward" wrappingWidth="882.1366806030273">
               <font>
                  <Font name="System Bold" size="20.0" />
               </font>
            </Text>
            <HBox prefHeight="100.0" prefWidth="200.0">
               <children>
                  <BorderPane fx:id="graphOutputPane" minHeight="-Infinity" minWidth="-Infinity" prefHeight="259.0" prefWidth="851.0" style="-fx-border-color: #A9A9A9; -fx-border-radius: 5;">
                     <padding>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                     </padding>
                     <HBox.margin>
                        <Insets bottom="8.0" left="8.0" right="8.0" top="8.0" />
                     </HBox.margin>
                  </BorderPane>
                  <VBox prefHeight="275.0" prefWidth="409.0" HBox.hgrow="ALWAYS">
                     <children>
                        <Label prefHeight="18.0" prefWidth="412.0" text="Size of Vertex Cover in reduced problem:">
                           <VBox.margin>
                              <Insets bottom="8.0" left="8.0" right="8.0" top="8.0" />
                           </VBox.margin>
                        </Label>
                        <TextField fx:id="vertexCoverSizeInput" disable="true" prefHeight="26.0" prefWidth="0.0" promptText="Size of Vertex Cover ...">
                           <VBox.margin>
                              <Insets bottom="8.0" left="8.0" right="8.0" top="8.0" />
                           </VBox.margin>
                        </TextField>
                     </children>
                     <HBox.margin>
                        <Insets top="8.0" />
                     </HBox.margin>
                  </VBox>
               </children>
            </HBox>
         </children>
      </VBox>
      <HBox prefHeight="46.0" prefWidth="900.0">
         <children>
            <Button fx:id="backButton" alignment="TOP_CENTER" cancelButton="true" minWidth="100.0" mnemonicParsing="false" onAction="#backFromReduction" prefHeight="26.0" prefWidth="172.0" text="Back">
               <HBox.margin>
                  <Insets bottom="8.0" left="8.0" right="8.0" top="8.0" />
               </HBox.margin>
            </Button>
            <Region prefHeight="42.0" prefWidth="601.0" HBox.hgrow="ALWAYS" />
            <Button fx:id="resetButton" alignment="TOP_CENTER" minWidth="100.0" mnemonicParsing="false" onAction="#resetEnvironment" prefHeight="26.0" prefWidth="172.0" text="Reset">
               <HBox.margin>
                  <Insets bottom="8.0" left="8.0" right="8.0" top="8.0" />
               </HBox.margin>
            </Button>
            <Button fx:id="stepButton" alignment="TOP_CENTER" minWidth="100.0" mnemonicParsing="false" onAction="#makeStep" prefHeight="26.0" prefWidth="172.0" text="Step">
               <HBox.margin>
                  <Insets bottom="8.0" left="8.0" right="8.0" top="8.0" />
               </HBox.margin>
            </Button>
         </children>
      </HBox>
  </children>
</VBox>
